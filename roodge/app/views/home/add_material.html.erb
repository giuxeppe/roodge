<div class="container mt-4">
    <div class="row">

        <% if flash[:notice] %>
            <div class="alert alert-info mt-4" role="alert">
                <%= flash[:notice] %>
            </div>
        <% end %>
        <% if flash[:alert]%>
            <div class="alert alert-warning mt-4" role="alert">
                <%= flash[:alert] %>
            </div>
        <% end %> 

        <div class="col-lg-9 mb-4">
            <div class="card">
                <div class="card-body">
                <h2 class="card-title">Aggiunta materiale per la room NOME ROOM</h2>
                <%= form_with model: @user, url: create_room_path, method: :post, local: true, multipart: true do |form| %>
        
                    <div class="row mb-3">
                        <div class="col-md-9">
                            <%= form.label :titolo, "Titolo", class: "form-label" %>  
                            <%= form.text_field :titolo, class: "form-control", required: true, pattern: "[A-Za-zÀ-ÖØ-öø-ÿ\s]+", title: "Il nome può contenere solo lettere e spazi" %>
                        </div>
                    </div>
        
                    <div class="col-md-12">
                        <%= form.label :description, "Descrizione", class: "form-label" %>  
                        <%= form.text_area :description, class: "form-control", rows: 5 %>
                    </div>

                    <div class="col-md-9">
                        AGGIUNGI FILE TALE E QUALE ALLA PROPIC ALLA REGISTRAZIONE
                    </div>

                    <div class="col-md-4">
                        <%= form.label :price, "Prezzo", class: "form-label" %>  
                        <%= form.number_field :price, class: "form-control", step: "0.01", min: "0", placeholder: "Inserisci il prezzo" %>
                        LIMITA A UN NUMERO DECIMALE (MAX SECONDA CIFRA DECIMALE) O INTERO MINORE O UGUALE A 999,99
                    </div>
                  

                
                    <div class="separator"></div>
                    <div class="row">
                        <div class="col-md-8 offset-md-2">
                            <%= form.submit "Avanti", class: "btn btn-dark w-100" %>
                        </div>
                    </div>
                <% end %>        
            </div>
            </div>
        </div> 

        <div class="col-lg-3">
            <div class="card">
                <div class="card-body" style="display: flex; justify-content: center;">
                    <div class="propic"></div>
                </div>

                <div class="card-body">
                    <h5 class="mb-1" style="font-size: 25px;">Riccardo Mantegazza</h5>
                    <p class="info-user">riccardo_mantegazza</p>
                    
                </div>
            </div>
        </div>

    </div>
</div>