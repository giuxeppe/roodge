<div class="container mt-4">
    <div class="row">

        <div class="col-lg-9 mb-4">
            <div class="card">
                <div class="card-body">
                <h2 class="card-title">Creazione Room</h2>
                <%= form_with model: @user, url: registration_path, method: :post, local: true, multipart: true do |form| %>
        
                    <div class="row mb-3">
                        <div class="col-md-9">
                            <%= form.label :nome_room, "Nome della room", class: "form-label" %>  
                            <%= form.text_field :nome_room, class: "form-control", required: true, pattern: "[A-Za-zÀ-ÖØ-öø-ÿ\s]+", title: "Il nome può contenere solo lettere e spazi" %>
                        </div>
                    </div> 
                    
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <%= form.label :tag1, "Tag 1", class: "form-label" %>
                            <%= form.select :tag1, options_for_select([["Studente", "s"], ["Docente", "d"]], selected: ""), {prompt: "--Nessuna selezione--"}, {class: "form-control", required: true} %>
                        </div>
                        <div class="col-md-4">
                            <%= form.label :tag2, "Tag 2", class: "form-label" %>
                            <%= form.select :tag2, options_for_select([["Studente", "s"], ["Docente", "d"]], selected: ""), {prompt: "--Nessuna selezione--"}, {class: "form-control", required: true} %>
                        </div>
                        <div class="col-md-4">
                            <%= form.label :tag3, "Tag 3", class: "form-label" %>
                            <%= form.select :tag3, options_for_select([["Studente", "s"], ["Docente", "d"]], selected: ""), {prompt: "--Nessuna selezione--"}, {class: "form-control", required: true} %>
                        </div>
                    </div>
        
                    <div class="col-md-12">
                        <%= form.label :description, "Descrizione", class: "form-label" %>  
                        <%= form.text_area :description, class: "form-control", rows: 5 %>
                    </div>
                
                    <div class="separator"></div>
                    <div class="row">
                        <div class="col-md-8 offset-md-2">
                            <%= form.submit "Avanti", class: "btn btn-dark w-100" %>
                        </div>
                    </div>
                <% end %>        
            </div>
            </div>
        </div> 

        <div class="col-lg-3">
            <div class="card">
                <div class="card-body" style="display: flex; justify-content: center;">
                    <% if current_user.propic.attached? %>
                        <%= image_tag current_user.propic, class: "propic", style: "width: 150px; height: 150px; border-radius: 50%;" %>
                    <% else %>
                        <%= image_tag "default_profile.png", class: "propic", style: "width: 150px; height: 150px; border-radius: 50%;" %>
                    <% end %>
                </div> 

                <div class="card-body">
                    <h5 class="mb-1" style="font-size: 25px;"><%= current_user.nome %> <%= current_user.cognome %></h5>
                    <p class="info-user">
                        <% if current_user.ruolo == 's' %>
                            <%= link_to "#{current_user.nome_utente} Studente", info_student_path %>
                        <% elsif current_user.ruolo == 'd' %>
                            <%= link_to "#{current_user.nome_utente} Docente", info_professor_path %>
                        <% else %>
                            <%= current_user.nome_utente %> Ruolo non specificato
                        <% end %>
                    </p>

                    <%= form_with url: login_path, method: :delete do |form| %>
                        <%= form.submit "Logout", class: "btn btn-danger" %>
                    <% end %>
                </div>
            </div>
        </div>

    </div>
</div>
