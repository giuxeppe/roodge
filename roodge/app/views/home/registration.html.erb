<h2>Form di registrazione</h2>

<div class="card">
    <div class="card-body">
        <form action="<%= home_final_registration_path %>" method="get">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="name" class="form-label">Nome</label>  
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="col-md-6">
                    <label for="surname" class="form-label">Cognome</label>  
                    <input type="text" class="form-control" id="surname" name="surname" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                <label for="cf" class="form-label">Codice Fiscale</label>  
                <input type="text" class="form-control" id="cf" name="cf" required 
                    pattern="[A-Za-z]{6}[0-9]{2}[A-Za-z][0-9]{2}[A-Za-z][0-9]{3}[A-Za-z]">
            </div>
        
                <div class="col-md-6">
                    <label for="date_birth" class="form-label">Data di nascita</label>  
                    <input type="date" class="form-control" id="date_birth" name="date_birth" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="city_birth" class="form-label">Citt√† di nascita</label>  
                    <input type="text" class="form-control" id="city_birth" name="city_birth" required>
                </div>
                <div class="col-md-6">
                    <label for="address" class="form-label">Indirizzo di residenza</label>  
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="mail" class="form-label">Indirizzo email</label>  
                    <input type="text" class="form-control" id="mail" name="mail" required>
                </div>
                <div class="col-md-6">
                    <label for="role" class="form-label">Ruolo</label>
                    <select class="form-control" id="role" name="role" required>
                        <option value="" selected disabled>--Nessuna selezione--</option>
                        <option value="s">Studente</option>
                        <option value="d">Docente</option>
                    </select>
                </div>
                <div id="docente-options" style="display: none;">
                    <div class="col-md-6">
                        <label for="option1" class="form-label">Opzione 1</label>
                        <select class="form-control" id="option1" name="option1">
                        <option value="" selected disabled>--Nessuna selezione--</option>
                        <option value="1">Opzione A</option>
                        <option value="2">Opzione B</option>
                        <option value="3">Opzione C</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="option2" class="form-label">Opzione 2</label>
                        <select class="form-control" id="option2" name="option2">
                        <option value="" selected disabled>--Nessuna selezione--</option>
                        <option value="1">Opzione A</option>
                        <option value="2">Opzione B</option>
                        <option value="3">Opzione C</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="option3" class="form-label">Opzione 3</label>
                        <select class="form-control" id="option3" name="option3">
                        <option value="" selected disabled>--Nessuna selezione--</option>
                        <option value="1">Opzione A</option>
                        <option value="2">Opzione B</option>
                        <option value="3">Opzione C</option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="separator"></div>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <button type="submit" class="btn btn-dark w-100">Avanti</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
  function toggleDocenteOptions() {
    var role = document.getElementById("role").value;
    var docenteOptions = document.getElementById("docente-options");

    if (role === "d") {
      docenteOptions.style.display = "block";
    } else {
      docenteOptions.style.display = "none";
    }
  }
</script>
