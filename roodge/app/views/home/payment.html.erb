<div class="container mt-4">
    <div class="row">

        <% if flash[:notice] %>
            <div class="alert alert-info mt-4" role="alert">
                <%= flash[:notice] %>
            </div>
        <% end %>
        <% if flash[:alert]%>
            <div class="alert alert-warning mt-4" role="alert">
                <%= flash[:alert] %>
            </div>
        <% end %>  

        <div class="col-lg-9 mb-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Pagamento per NOME MATERIALE</h2>
                    <div class="row mb-3">
                        <div class="col-md-9">
                            <label class="form-label" for="nome-cognome">Nome e cognome del titolare:</label>
                            <input type="text" id="nome-cognome" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-9">
                            <label class="form-label" for="numero-carta">Numero della carta:</label>
                            <input type="text" id="numero-carta" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-9">
                            <label class="form-label" for="cvv">CVV:</label>
                            <input type="text" id="cvv" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-9">
                            <label class="form-label" for="scadenza">Scadenza:</label>
                            <input type="date" id="scadenza" class="form-control" placeholder="MM/YYYY">
                        </div>
                    </div>
                    <div class = "separator"></div>
                    <div class="row">
                        <div class="col-md-8 offset-md-2">
                            <div class="btn btn-dark w-100">Pagamento</div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 

        <div class="col-lg-3">
            <div class="card">
                <div class="card-body" style="display: flex; justify-content: center;">
                    <% if @user.propic.attached? %>
                        <%= image_tag @user.propic, class: "propic", style: "width: 150px; height: 150px; border-radius: 50%;" %>
                    <% else %>
                        <%= image_tag "default_profile.png", class: "propic", style: "width: 150px; height: 150px; border-radius: 50%;" %>
                    <% end %>
                </div>  

                <div class="card-body">
                    <h5 class="mb-1" style="font-size: 25px;"><%= @user.nome %> <%= @user.cognome %></h5>
                    <p class="info-user">
                        <%= link_to "#{@user.nome_utente}", info_user_path %>
                    </p>

                    <%= form_with url: login_path, method: :delete do |form| %>
                        <%= form.submit "Logout", class: "btn btn-danger" %>
                    <% end %>

                    <br>

                    <%= link_to "Back", :back %>
                </div>
            </div>
        </div>

    </div>
</div>
