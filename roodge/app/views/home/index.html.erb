<div class="container mt-4">
    <div class="row"> 

        <% if flash[:notice] %>
            <div class="alert alert-info mt-4" role="alert">
                <%= flash[:notice] %>
            </div>
        <% end %>
        <% if flash[:alert]%>
            <div class="alert alert-warning mt-4" role="alert">
                <%= flash[:alert] %>
            </div>
        <% end %>

        <div class="col-lg-9 mb-4">
            <div class="card">
            <div class="card-body">
                <h2 class="card-title">Ricerca Room</h2>
                <form class="d-flex mb-3" action="ricerca_room.php" method="get">
                <input type="text" class="form-control me-2" placeholder="Inserisci nome della room..." name="query" required>
                <button type="submit" class="btn btn-dark">Cerca</button>
                </form>
                <h3 class="card-subtitle mb-3">Rooms Disponibili</h3>
                <a href="/room_unlogged" class="registrazione-link">BARARE ROOM UNLOGGED</a>

                <ul class="list-group"> 
                <% @rooms.each do |room| %>
                    <li class="list-group-item">
                    <a href="<%= room_path(room) %>" class="text-decoration-none">
                        <h5 class="mb-1"><%= room.name %></h5>
                        <div class="tags">
                        <% room.tags.each do |tag| %>
                            <span class="tag">#<%= tag.name %></span>
                        <% end %>
                        </div>
                    </a>
                    </li>
                <% end %>
                </ul>
            </div>
            </div>
        </div>

        <div class="col-lg-3">
