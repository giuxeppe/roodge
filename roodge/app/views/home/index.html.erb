<div class="container mt-4">
    <div class="row"> 
        
        <% if flash[:notice] %>
            <div class="alert alert-info mt-4" role="alert">
                <%= flash[:notice] %>
            </div>
        <% end %>
        <% if flash[:alert]%>
            <div class="alert alert-warning mt-4" role="alert">
                <%= flash[:alert] %>
            </div>
        <% end %>

        <div class="col-lg-9 mb-4">
            <div class="card">
            <div class="card-body">
                <h2 class="card-title">Ricerca Room</h2>
                <form class="d-flex mb-3" action="javascript:void(0);" id="search-form">
                    <input type="text" id="room_search" class="form-control me-2" placeholder="Inserisci nome della room..." autocomplete="off">
                </form>

                <ul id="results" style="list-style-type:none; margin:0; padding:0; border:1px solid #ccc; max-height:200px; overflow-y:auto; position:relative; width:100%; display:none; background-color:white;">
                </ul>
                <h3 class="card-subtitle mb-3">Rooms Disponibili</h3>
                <a href="/room_unlogged" class="registrazione-link">BARARE ROOM UNLOGGED</a>

                <ul class="list-group"> 
                <% @rooms.each do |room| %>
                    <li class="list-group-item">
                    <a href="<%= room_unlogged_path(room) %>" class="text-decoration-none">
                        <h5 class="mb-1"><%= room.nome %></h5>
                        <div class="tags">
                        
                        </div>
                    </a>
                    </li>
                <% end %>
                </ul>
            </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-center">
                        <h2 class="card-title">Login</h2>
                    </div>
                    <form action="<%= login_path %>" method="post">
                        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">Accedi</button>
                    </form>
                    <div class="text-center my-3">oppure</div>
                    <div class="d-grid mb-3 d-flex align-items-center justify-content-center">                    
                        <% if @devise_mapping.omniauthable? %>
                            <% @resource_class.omniauth_providers.each do |provider| %>
                                <%= button_to omniauth_authorize_path(@resource_name, provider), data: { turbo: false }, class: "gsi-material-button", method: :post do %>
                                <div class="gsi-material-button-state"></div>
                                <div class="gsi-material-button-content-wrapper">
                                    <div class="gsi-material-button-icon">
                                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
                                        <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                                        <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                                        <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                                        <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                                        <path fill="none" d="M0 0h48v48H0z"></path>
                                    </svg>
                                    </div>
                                    <span class="gsi-material-button-contents">Continue with <%= OmniAuth::Utils.camelize(provider) %></span>
                                    <span style="display: none;">Continue with <%= OmniAuth::Utils.camelize(provider) %></span>
                                </div>
                                <% end %>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="registrazione-link-wrapper d-flex align-items-center justify-content-center">
                        <a href="/registration" class="registrazione-link">Non sei iscritto?<br>Registrati!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const searchInput = document.getElementById("room_search");
    const resultsList = document.getElementById("results");

    let timeout = null;

    searchInput.addEventListener("input", function() {
      clearTimeout(timeout);

      const query = searchInput.value.trim();
      resultsList.innerHTML = '';
      resultsList.style.display = 'none';

      if (query.length > 0) {
        timeout = setTimeout(function() {
          fetch(`/rooms/search?query=${query}`, {
            headers: { 'Accept': 'application/json' }
          })
          .then(response => response.json())
          .then(data => {
            if (data.length > 0) {
              resultsList.style.display = 'block';
              data.forEach(function(room) {
                const li = document.createElement("li");
                li.textContent = room;
                li.style.padding = "8px";
                li.style.cursor = "pointer";
                li.addEventListener("click", function() {
                  searchInput.value = room;
                  resultsList.innerHTML = '';
                  resultsList.style.display = 'none';
                });
                resultsList.appendChild(li);
              });
            }
          })
          .catch(function(error) {
            console.error("Errore nella ricerca:", error);
          });
        }, 300);
      }
    });

    // Nascondere la lista quando si clicca fuori dalla ricerca
    document.addEventListener("click", function(event) {
      if (!searchInput.contains(event.target) && !resultsList.contains(event.target)) {
        resultsList.style.display = 'none';
      }
    });
  });
</script>